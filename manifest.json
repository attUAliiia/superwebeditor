{
  "manifest_version": 3,
  "name": "super web editor",
  "version": "2.1",
  "description": "visually edit websites and save changes locally.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "editor controls"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}